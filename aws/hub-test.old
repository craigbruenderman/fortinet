# Outside interface
resource "aws_network_interface" "fg2-eth0" {
  description = "fg-hub2-port1"
  subnet_id   = aws_subnet.snet-pub1.id
}

# Inside interface
resource "aws_network_interface" "fg2-eth1" {
  description       = "fg-hub2-port2"
  subnet_id         = aws_subnet.snet-priv1.id
  source_dest_check = false
}

resource "aws_network_interface_sg_attachment" "fg2-attach-outside" {
  security_group_id    = aws_security_group.allow_all.id
  network_interface_id = aws_network_interface.fg2-eth0.id
}

resource "aws_network_interface_sg_attachment" "fg2-attach-inside" {
  security_group_id    = aws_security_group.allow_all.id
  network_interface_id = aws_network_interface.fg2-eth1.id
}

locals {
  instance_config = jsonencode({
    config = templatefile("${var.bootstrap-fgtvm}", {
      adminsport = var.adminsport
      }
    )
  }
  )
}

resource "aws_instance" "fg2" {
  ami           = "ami-0d8ab3309f7946a19"
  instance_type = var.size
  key_name      = var.keyname
  user_data     = local.instance_config

  root_block_device {
    volume_type = "gp2"
    volume_size = "2"
  }

  ebs_block_device {
    device_name = "/dev/sdb"
    volume_size = "30"
    volume_type = "gp2"
  }

  primary_network_interface {
    network_interface_id = aws_network_interface.fg2-eth0.id
  }

  tags = {
    Name = "e1-fghub-02"
  }
}

resource "aws_network_interface_attachment" "fg2-eni-attach" {
  instance_id          = aws_instance.fg2.id
  network_interface_id = aws_network_interface.fg2-eth1.id
  device_index         = 1
}